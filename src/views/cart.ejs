<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/header.ejs") %>
            <main>
                <div class="contenidoCarrito">
                    <a class="nombreCart">Carrito de compras:</a>
                    <div class="cart-items">
                        <div class="product">
                            <div class="product-unit">
                                <img src="/images/products/Coast.webp" alt="00000003" width="80">
                                <div class="product-description">
                                    <div class="product-name">Carry-On</div>
                                    <div class="product-price">$275</div>
                                </div>
                            </div>
                            <div class="product-subtotal">
                                <div class="quantity">
                                    <button>-</button>
                                    <div>1</div>
                                    <button>+</button>
                                </div>
                                <div class="subtotal-price">$275</div>
                            </div>
                        </div>
                    </div>
                    <div class="agregarProducto">

                        <i class="fa-solid fa-circle-plus"><input type="submit" value="Agregar Producto/s"></i>
