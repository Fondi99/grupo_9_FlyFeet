<header>
  <nav class="navbar">
    <div class="navbar-toggler">
      <a><i class="icon fas fa-bars fa-xl"></i></a>
    </div>
    <div class="brand">
      <a href="/">
        <img src="/images/logo.png" alt="Logo" id="brand-logo" />
        <span class="login">Flyfeet</span>
      </a>
    </div>
    <div class="user">
      <ul>
        <% if(locals.user){ %>
        <li>
          <a href="/users/profile">
            <i class="fa-solid fa-circle-user"></i>
            <span class="login"><%= user.first_name %></span>
          </a>
        </li>
        <% } else { %>
        <li>
          <a href="/users/login">
            <i class="fa-solid fa-circle-user"></i>
            <span class="login">Ingresar</span>
          </a>
        </li>
        <% } %>
        <li>
          <a href="/cart">
            <i class="fa-solid fa-cart-shopping"></i>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>
