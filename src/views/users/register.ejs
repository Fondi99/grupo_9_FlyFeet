<!--  Include de head -->
<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>
            <main>
                <form action="/register" method="post">
                    <header>
                        <h3>REGÍSTRATE</h4>
                    </header>
                    <div class="form-group">
                        <span class="error"><%=locals.errors?.form && `${errors.form.msg}`%></span>
                    </div>
                    <div class="form-group">
                        <label for="name">Nombre de perfil:</label>
                        <input type="text" id="name" name="name" placeholder="Nombre" value="<%= typeof old != 'undefined' ? old.name : "" %>"/>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input requiered type="email" id="email" name="email" placeholder="Ej.: ejemplo@mail.com"
                        value="<%= typeof old != 'undefined' ? old.email : "" %>"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <input requiered type="password" id="password" name="password" placeholder="Ingrese su contraseña">
                    </div>
                    <% if (typeof errors != 'undefined') { %>
                        <% errors.forEach(error => { %>
                           <ul class="error">
                              <li> <%= error.msg %> </li>
                           </ul>
                        <% }) %>
                     <% } %>
                    <div class="form-group">
                        <button type="submit">Crear cuenta</button>
                    </div>
                    <div class="form-fork">
                        ¿Ya tienes una cuenta?
                        <a href="/login">Iniciá sesión</a>
                    </div>
                </form>
            </main>
            <%- include('../partials/footer') %>
    </body>

    </html>