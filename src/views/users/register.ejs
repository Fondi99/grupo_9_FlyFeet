<!--  Include de head -->
<%- include("../partials/head.ejs") %>

    <body id="register">
        <%- include("../partials/header.ejs") %>
            <main class="mainLogin">
                <div class="loginImg">
                  <img src="/images/loginpic.png" alt="" class="loginImg" />
                </div>
                <div class="loginFormDiv">
                  <h2 class="bienvenida">Bienvenido!</h2>
                  <form action="/users/register" method="post" enctype="multipart/form-data">
                    <div class="loginForm">
                      <label for="firstName">Nombre:</label>
                      <input type="text" id="firstName" name="firstName" placeholder="Nombre" value="<%= typeof old != 'undefined' ? old.firstName : "" %>"/>
                    </div>
                    <div class="loginForm">
                      <label for="lastName">Apellido:</label>
                      <input type="text" id="lastName" name="lastName" placeholder="Apellido" value="<%= typeof old != 'undefined' ? old.lastName : "" %>"/>
                    </div>
                    <div class="loginForm">
                      <label for="email">Email:</label>
                      <input requiered type="email" id="email" name="email" placeholder="Ej.: ejemplo@mail.com"
                      value="<%= typeof old != 'undefined' ? old.email : "" %>"/>
                    </div>
                    <div class="loginForm">
                      <label for="image">Image:</label>
                      <input type="file" id="image" name="img" accept="image/*" />
                    </div>
                    <div class="loginForm">
                      <label for="password">Contraseña:</label>
                      <input requiered type="password" id="password" name="password" placeholder="Ingrese su contraseña">
                    </div>
                    <div class="loginForm">
                      <label for="confirmPassword">Confirmar contraseña:</label>
                      <input
                        type="password"
                        id="confirmPassword"
                        name="confirmPassword"
                        placeholder="Confirme su contraseña"
                      />
                    </div>
                    <% if (typeof errors != 'undefined') { %>
                        <% errors.forEach(error => { %>
                           <ul class="error">
                              <li> <%= error.msg %> </li>
                           </ul>
                        <% }) %>
                     <% } %>
                    <div>
                      <button type="submit" class="form-login">Sign Up</button>
                    </div>
                    ¿Ya tienes una cuenta?
                    <div class="form-fork">
                        <a href="/users/login">Iniciá sesión</a>
                    </div>
                  </form>
                </div>
              </main>
              <footer class="background">
                  <%- include('../partials/footer') %>
              </footer>
    </body>

    </html>