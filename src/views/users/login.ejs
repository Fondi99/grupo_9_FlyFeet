<!--  Include de head -->
<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>
            <main>
                <form action="/users/login" method="POST">
                    <header>
                        <h3>INICIA SESIÓN</h4>
                    </header>
                    <div class="form-group">
                        <span class="error"><%=locals.errors?.form && `${errors.form.msg}`%></span>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="text" id="email" name="email" placeholder="Ej.: ejemplo@mail.com" value="<%= typeof old != 'undefined' ? old.email : "" %>"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="password" placeholder="Ingrese su contraseña" value="<%= typeof old != 'undefined' ? old.password : "" %>"/>
                    </div>
                    <% if (typeof errors != 'undefined') { %>
                        <% errors.forEach(error => { %>
                         <ul class="error">
                             <li> <%= error.msg %> </li>
                         </ul>
                        <% }) %>
                       <% } %>
                    <div class="form-group form-settings">
                        <div class="form-options">
                            <a href="/password_reset">¿Has olvidado tu contraseña?</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit">Iniciar sesión</button>
                    </div>
                    <div class="form-fork">
                        ¿No tienes una cuenta aún?
                        <a href="/users/register">Creá una cuenta</a>
                    </div>
                </form>
            </main>
            <%- include('../partials/footer') %>
    </body>

    </html>