<!--  Include de head -->
<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>
            <main class="mainLogin">
                <div class="loginImg">
                  <img src="/images/loginpic.png" alt="" />
                </div>
                <div class="loginFormDiv">
                  <h2 class="bienvenida">Bienvenido de vuelta!</h2>
                  <span class="error"><%=locals.errors?.form && `${errors.form.msg}`%></span>
                  <form action="/users/login" method="POST">
                    <div class="loginForm">
                      <label for="email">Email:</label>
                      <input
                        type="text"
                        id="email"
                        name="email"
                        placeholder="Ej.: ejemplo@mail.com"
                        value="<%= typeof old != 'undefined' ? old.email : "" %>"
                      />
                    </div>
                    <div class="loginForm">
                      <label for="password">Contrase침a:</label>
                      <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Ingrese su contrase침a"
                        value="<%= typeof old != 'undefined' ? old.password : "" %>"
                      />
                    </div>
                    <div class="formcheckbox">
                      <div>
                        <input type="checkbox" name="rememberMe" id="remember-me" />
                        <label for="remember-me">Recuerdame</label>
                      </div>
                      <a href="/password_reset">Olvidaste tu contrase침a?</a>
                    </div>
                    <% if (typeof errors != 'undefined') { %>
                        <% errors.forEach(error => { %>
                         <ul class="error">
                             <li> <%= error.msg %> </li>
                         </ul>
                        <% }) %>
                       <% } %>
                    <div>
                      <button type="submit" class="form-login">Login</button>
                    </div>
                    <div>
                      <a href="/users/register" class="form-fork">Cre치 tu cuenta</a>
                    </div>
                  </form>
                </div>
              </main>
              <footer id="nobackround">
                <%- include('../partials/footer') %>
              </footer>
    </body>

    </html>